# Anthropic API Configuration
VITE_ANTHROPIC_API_KEY=your_api_key_here

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Security & Rate Limiting
MAX_PROMPT_LENGTH=10000
CLAUDE_TIMEOUT_MS=120000

# API Security
# Comma-separated list of allowed API keys for authenticating API requests
# IMPORTANT: Generate cryptographically secure random keys for production
# Run this command to generate a key: openssl rand -hex 32
# Example output: 3f7c2a8b1d9e4f5c6a2b8d3e9f1c4a7b2d5e8f3c6a9b2d5e8f1c4a7b3d6e9f2c
ALLOWED_API_KEYS=your-api-key-1,your-api-key-2

# Metrics Security
# Bearer token for accessing /metrics and /stats endpoints
# IMPORTANT: Generate a strong bearer token for production
# Run this command to generate a token: openssl rand -base64 32
# Example output: K8vP2xN4qM7yR5tU9wA3bC6dE8fG1hJ4kL7mN0pQ2sT5vX8z
METRICS_TOKEN=your-metrics-access-token

# CORS Configuration
# Comma-separated list of allowed origins for production
# Add all domains that will access your API (without trailing slash)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring (Docker)
# Grafana admin password - MUST be strong in production (16+ characters, mix of letters/numbers/symbols)
# Run this command to generate: openssl rand -base64 24
# Example output: qW3rT6yU9iO0pL2kJ5hG8fD1sA4zX7cV
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
