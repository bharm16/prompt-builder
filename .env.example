# OpenAI Configuration (Primary Model)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_MS=60000

# Groq Configuration (Optional - For Fast Draft Generation)
# Get your free API key at https://console.groq.com
# Enables two-stage optimization: ~300ms draft + background refinement
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TIMEOUT_MS=5000

# Firebase Configuration (Client)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Server Configuration
PORT=3001
NODE_ENV=development

# API Authentication (Optional - for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=your_api_key_here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Sentry Error Tracking (Optional but Recommended)
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Sentry Configuration (Optional)
VITE_SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
VITE_ENVIRONMENT=development
VITE_APP_VERSION=1.0.0

# Sentry Source Maps Upload (Production builds only)
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Enable Sentry in development (Optional - defaults to disabled)
SENTRY_DEBUG=false
VITE_SENTRY_DEBUG=false
