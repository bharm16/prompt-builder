# Anthropic API Configuration
VITE_ANTHROPIC_API_KEY=your_api_key_here

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Security & Rate Limiting
MAX_PROMPT_LENGTH=10000
CLAUDE_TIMEOUT_MS=120000

# API Security
# Comma-separated list of allowed API keys for authenticating API requests
# Generate secure random keys: openssl rand -hex 32
ALLOWED_API_KEYS=your-api-key-1,your-api-key-2

# Metrics Security
# Bearer token for accessing /metrics and /stats endpoints
# Generate secure token: openssl rand -base64 32
METRICS_TOKEN=your-metrics-access-token

# CORS Configuration
# Comma-separated list of allowed origins for production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring (Docker)
# Grafana admin password (use a strong random password, 16+ characters)
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
