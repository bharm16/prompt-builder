{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["spans", "meta"],
  "properties": {
    "spans": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "start", "end"],
        "properties": {
          "text": {
            "type": "string"
          },
          "start": {
            "type": "integer",
            "minimum": 0
          },
          "end": {
            "type": "integer",
            "minimum": 0
          },
          "role": {
            "type": "string",
            "default": "Descriptive"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.7
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "notes"],
      "properties": {
        "version": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  }
}
