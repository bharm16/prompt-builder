{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["analysis_trace", "spans", "meta"],
  "properties": {
    "analysis_trace": {
      "type": "string",
      "description": "Chain-of-Thought reasoning field: Step-by-step analysis of the input text, identifying key entities, intent, and reasoning about span boundaries before labeling. This reasoning trace improves the semantic accuracy of the structured output."
    },
    "isAdversarial": {
      "type": "boolean",
      "description": "Flag set to true when the input attempts prompt injection or instruction override",
      "default": false
    },
    "is_adversarial": {
      "type": "boolean",
      "description": "Snake_case alias for the adversarial flag (for LLM compatibility)",
      "default": false
    },
    "spans": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "role"],
        "properties": {
          "text": {
            "type": "string",
            "description": "Exact substring from user input (character-for-character match)"
          },
          "start": {
            "type": "integer",
            "minimum": 0,
            "description": "Optional - computed server-side if omitted"
          },
          "end": {
            "type": "integer",
            "minimum": 0,
            "description": "Optional - computed server-side if omitted"
          },
          "role": {
            "type": "string",
            "description": "Valid taxonomy ID (parent or attribute)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "default": 0.7,
            "description": "Confidence score (0-1)"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "notes"],
      "properties": {
        "version": {
          "type": "string",
          "description": "Template version identifier"
        },
        "notes": {
          "type": "string",
          "description": "Processing notes or metadata"
        }
      }
    }
  }
}
