{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "types": ["node"],
    "typeRoots": ["../node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["src/infrastructure/*"],
      "@services/*": ["src/services/*"],
      "@api/*": ["src/api/*"],
      "@types/*": ["src/types/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@llm/*": ["src/llm/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@clients/*": ["src/clients/*"],
      "@server/*": ["src/*"],
      "@shared/*": ["../shared/*"],
      "#shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "index.ts", "instrument.mjs", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
