{
  "dashboard": {
    "title": "Prompt Builder API Performance",
    "tags": ["prompt-builder", "api", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
      {
        "id": 2,
        "title": "Response Time (P50, P95, P99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m])",
            "legendFormat": "4xx"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m])",
            "legendFormat": "5xx"
          }
        ],
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
      },
      {
        "id": 4,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m])",
            "legendFormat": "Hits - {{cache_type}}"
          },
          {
            "expr": "rate(cache_misses_total[5m])",
            "legendFormat": "Misses - {{cache_type}}"
          }
        ],
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "singlestat",
        "targets": [
          {
            "expr": "avg(cache_hit_rate)"
          }
        ],
        "format": "percent",
        "gridPos": { "x": 0, "y": 16, "w": 6, "h": 4 }
      },
      {
        "id": 6,
        "title": "Active Requests",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum(http_active_requests)"
          }
        ],
        "gridPos": { "x": 6, "y": 16, "w": 6, "h": 4 }
      },
      {
        "id": 7,
        "title": "Claude API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(claude_api_duration_seconds_bucket[5m]))",
            "legendFormat": "P95 - {{mode}}"
          }
        ],
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
      },
      {
        "id": 8,
        "title": "Claude API Call Rate by Mode",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(claude_api_calls_total[5m])",
            "legendFormat": "{{mode}} - {{status}}"
          }
        ],
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 }
      },
      {
        "id": 9,
        "title": "Circuit Breaker State",
        "type": "singlestat",
        "targets": [
          {
            "expr": "circuit_breaker_state{circuit=\"claude-api\"}"
          }
        ],
        "valueMaps": [
          { "value": "0", "text": "CLOSED" },
          { "value": "1", "text": "OPEN" },
          { "value": "2", "text": "HALF-OPEN" }
        ],
        "gridPos": { "x": 12, "y": 24, "w": 6, "h": 4 }
      },
      {
        "id": 10,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)"
          }
        ],
        "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 }
      },
      {
        "id": 11,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 }
      },
      {
        "id": 12,
        "title": "Token Usage by Mode",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(claude_tokens_total[5m])",
            "legendFormat": "{{type}} - {{mode}}"
          }
        ],
        "gridPos": { "x": 0, "y": 36, "w": 12, "h": 8 }
      },
      {
        "id": 13,
        "title": "Request Coalescing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(coalesced_requests_total[5m])",
            "legendFormat": "{{type}}"
          }
        ],
        "gridPos": { "x": 12, "y": 36, "w": 12, "h": 8 }
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
