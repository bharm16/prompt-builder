rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Prompts collection - users can read/write their own prompts, shared prompts are readable via UUID query
    match /prompts/{promptId} {
      function isOwner() {
        return request.auth != null && resource.data.userId == request.auth.uid;
      }

      function isUuidShareQuery() {
        return request.query.where.size() == 1
          && request.query.where[0].field == 'uuid'
          && request.query.where[0].op == '=='
          && request.query.limit <= 1;
      }

      // Owners can read directly; shared reads require a UUID equality query
      allow get: if isOwner();
      allow list: if isOwner() || isUuidShareQuery();

      // Allow users to create prompts with their own userId
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow users to update/delete their own prompts
      allow update, delete: if isOwner();
    }

    // User accounts and credit balances
    match /users/{userId} {
      // Users can read their own profile and credit balance
      allow read: if request.auth != null && request.auth.uid == userId;

      // Prevent client-side writes to credit balance; only backend via Admin SDK should update
      allow write: if false;
    }

    // Server-only collections: explicitly deny all client access.
    // These are managed exclusively via Firebase Admin SDK on the backend.
    match /video_jobs/{document=**} {
      allow read, write: if false;
    }
    match /convergence_sessions/{document=**} {
      allow read, write: if false;
    }
    match /sessions/{document=**} {
      allow read, write: if false;
    }
  }
}
